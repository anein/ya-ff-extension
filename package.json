{
  "name": "YaSearch",
  "author": {
    "name": "Alexander Ein"
  },
  "description": "Yandex Search Unofficial Extension for Firefox ",
  "keywords": [
    "webextensions",
    "webextensions-apis",
    "mdn",
    "firefox",
    "mozilla",
    "yandex"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
